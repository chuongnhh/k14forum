@model K14Forum.Models.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Phone Number";
}

<div class="row">
    <div class="col-md-6">
        <h2>@ViewBag.Title.</h2>

        @using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { @class = "", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="page-header">Add a phone number</h4>

            @Html.ValidationSummary("", new { @class = "text-danger" })
            <fieldset class="form-group">
                @Html.LabelFor(m => m.Number, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
            </fieldset>
            <fieldset class="form-group">
                <input type="submit" class="btn btn-default" value="Submit" />
            </fieldset>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

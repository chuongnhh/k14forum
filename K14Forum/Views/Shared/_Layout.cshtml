@using K14Forum.CodeHelper;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)
    <link href="~/Plugins/backtotop/showup.css" rel="stylesheet" />
    <link href="~/Content/sticky-footer.css" rel="stylesheet" />
</head>
<body>
    <div class="jumbotron">
        <h2 class="container">Hello world!</h2>
    </div>
    <div class="navbar navbar-default" data-spy="affix" data-offset-top="93">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/Home" class="navbar-brand"><span class="fa fa-twitch"></span></a>
                @*@Html.ActionLink("K14Forum", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="@(CurrentAction.currentAction == "Home" ? "active" : "")">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                    <li class="@(CurrentAction.currentAction == "Article" ? "active" : "")">@Html.ActionLink("Bài viết", "Index", "Article")</li>
                </ul>
                <ul class="nav navbar-form navbar-right hidden-xs navbar-search">
                    <li>
                        @using (Html.BeginForm("SearchResult", "Home", FormMethod.Get, new { @id = "frmSearch", @role = "search" }))
                        {
                            <fieldset class="form-group">
                                <div class="input-group">
                                    <input type="text" class="form-control" id="txtSearch" name="keyword" placeholder="Nhập từ khóa...">
                                    <span class="input-group-btn">
                                        <button type="submit" class="btn btn-default" id="btnSearch"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </fieldset>
                        }
                    </li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="footer panel-footer text-center">
        <div class="container">
            &copy; @DateTime.Now.Year - <a href="http://facebook.com/chuongnh.hcm/" target="_blank">chuongnh</a>. All right reserved.
        </div>
    </footer>
    @RenderPage("_BackToTop.cshtml")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Plugins/backtotop/showup.js"></script>
    <script src="~/Scripts/Controllers/searchController.js"></script>
    @*@RenderPage("_LikeFacebook.cshtml")*@
</body>
</html>
